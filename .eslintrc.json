{
    "env": {
        "browser": true,
        "commonjs": true
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "constructor-super": "warn",
        "valid-typeof": "warn",
        "indent": "warn",
        "no-trailing-spaces":"warn"
    },
    "plugins": ["angular"],
    "globals": {
        "angular": true
    }
    
}